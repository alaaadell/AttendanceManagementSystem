@model IEnumerable<AttendanceManagementSystem.models.Attendance>

@{
    ViewData["Title"] = "Index";
}

@*<h1>Attendance</h1>*@

<p>
    @*<a asp-action="Create" id=" create" class="btn btn-primary">Create New</a>*@

   
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Day)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.traineeId.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Day)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.traineeId.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>

                <td>
                    <a asp-action="Edit" style="color: #dc143c;" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" style="color: #dc143c;" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" style="color: #dc143c;" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
